[user]
	name = ensonmj
	email = ensonmj@gmail.com
[core]
	pager = delta
	autocrlf = input
	safecrlf = true
[push]
	default = simple
[alias]
	co = checkout
	ci = commit
	st = status
	sp = ! git stash save && git pull --rebase && git stash pop
	br = branch
	hist = log --pretty=format:'%C(auto)%h %ad | %s%d [%an]' --graph --date=short --all
	type = cat-file -t
	dump = cat-file -p
	sed = ! git grep -z --full-name -l '.' | xargs -0 sed -i -e
[color]
	ui = true
[http]
	sslVerify = false
[interactive]
	diffFilter = delta --color-only
[delta]
	navigate = true    # use n and N to move between diff sections
	light = false      # set to true if you're in a terminal w/ a light background color (e.g. the default macOS terminal)
[merge]
	conflictstyle = diff3
[diff]
	colorMoved = default
